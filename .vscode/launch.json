{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "protocol": "auto",
                "env": {
                    "NODE_ENV" : "development"
                },
                "cwd": "${workspaceRoot}",
                "console": "internalConsole",
                "runtimeExecutable": "npm",
                "runtimeArgs": [
                    "run-script", "debug"
                ],
                "port": 5858,
                "stopOnEntry": false
            }
        ]
    }